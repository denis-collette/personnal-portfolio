---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Denis Collette | Junior Full-Stack Developer">
	<div class="container mx-auto px-8 text-center">
		<section class="min-h-[60vh] flex flex-col justify-center items-center">
			<h1 class="text-5xl md:text-7xl font-bold tracking-tighter mb-4 bg-gradient-to-r from-purple-500 to-pink-500 text-transparent bg-clip-text">
				Denis Collette
			</h1>
			<p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl">
				Motivated Junior Full-Stack Developer with a passion for building innovative web solutions using JavaScript, Angular, and Astro.
			</p>
			<div>
				<a href="/cv" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition-transform transform hover:scale-105">
					View My Experience
				</a>
				<a href="https://github.com/denis-collette" target="_blank" class="ml-4 border border-gray-600 hover:bg-gray-800 text-white font-bold py-3 px-6 rounded-lg transition-colors">
					See My GitHub
				</a>
			</div>
		</section>
	</div>
</Layout>
