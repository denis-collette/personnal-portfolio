---
import Layout from '../layouts/Layout.astro';
import CVTimeline from '../components/CVTimeline.astro';
---

<Layout title="My CV - Denis Collette">
  <main>
    <!-- Redesigned Header Section -->
    <div class="text-center p-12 md:p-16 bg-gradient-to-r from-gray-800 via-gray-900 to-black">
      <h1 class="text-4xl md:text-5xl font-extrabold text-white">My Professional Journey</h1>
      <p class="text-lg text-gray-300 mt-3 max-w-2xl mx-auto">An interactive timeline of my experience and education.</p>
    </div>

    <!-- Sticky Sub-Navigation -->
    <div class="sticky top-0 z-50 bg-white/80 backdrop-blur-sm shadow-sm">
      <div class="container mx-auto px-4">
        <nav class="flex justify-center items-center h-14 space-x-4 md:space-x-8">
          <a href="#experience" class="text-gray-600 hover:text-indigo-600 font-semibold transition-colors duration-300">
            Experience
          </a>
          <a href="#education" class="text-gray-600 hover:text-indigo-600 font-semibold transition-colors duration-300">
            Education
          </a>
        </nav>
      </div>
    </div>
    
    <!-- Timeline Component -->
    <div class="bg-gray-50">
      <CVTimeline />
    </div>

  </main>
</Layout>
