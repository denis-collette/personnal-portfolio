---
import Layout from "../layouts/Layout.astro";
import PokemiltonGame from "../components/PokemiltonGame.astro";
---

<Layout title="My Projects | Denis Collette">
	<div
		class="bg-gradient-to-r from-gray-800 via-gray-900 to-black text-white text-center py-16 px-4"
	>
		<h1 class="text-4xl md:text-5xl font-extrabold tracking-tight">
			My Projects
		</h1>
	</div>
	<div class="PokemiltonProject">
		<p class="mt-4 text-lg text-gray-300 max-w-2xl mx-auto text-center">
			Here is an interactive version of a terminal game I built.
		</p>
		<div class="container mx-auto px-4 py-12">
			<PokemiltonGame />
		</div>
	</div>
	<div class="NextProject">
		<p class="mt-4 text-lg text-gray-300 max-w-2xl mx-auto text-center">
			Other projects are on the way.
		</p>
	</div>
</Layout>
