// This component creates the sticky sub-navigation for the homepage.
---

<div
  class="bg-gray-100/80 backdrop-blur-sm sticky top-[68px] z-20 shadow-sm border-b border-gray-200"
>
  <div class="container mx-auto px-6">
    <div
      class="flex justify-start md:justify-center items-center h-12 overflow-x-auto"
    >
      <nav class="flex space-x-6 text-sm font-medium">
        <a
          href="#about"
          class="text-gray-600 hover:text-indigo-600 transition-colors whitespace-nowrap"
          ><strong>About Me</strong></a
        >
        <a
          href="#focus"
          class="text-gray-600 hover:text-indigo-600 transition-colors whitespace-nowrap"
          ><strong>Current Focus</strong></a
        >
        <a
          href="#skills"
          class="text-gray-600 hover:text-indigo-600 transition-colors whitespace-nowrap"
          ><strong>Skills</strong></a
        >
        <a
          href="#contact"
          class="text-gray-600 hover:text-indigo-600 transition-colors whitespace-nowrap"
          ><strong>Contact</strong></a
        >
      </nav>
    </div>
  </div>
</div>
